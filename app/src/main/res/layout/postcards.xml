<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    app:cardBackgroundColor="@color/cardcolour_purple"
    app:flow_verticalGap="3dp"

    app:cardPreventCornerOverlap="true"

    android:elevation="3dp"
    app:cardCornerRadius="7dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    app:cardElevation="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST ID"
        android:layout_weight="1"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12dp"
        android:id="@+id/postid"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12dp"
    android:textAlignment="viewEnd"
        android:text="Timestamp"
        android:id="@+id/timestamp"/>


</androidx.appcompat.widget.LinearLayoutCompat>

         <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POST"
             android:id="@+id/posttext"
             android:layout_marginTop="20dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/postimage"
            android:layout_margin="10dp"
            android:visibility="gone"/>




        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="50dp"
            >

                />
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/heartanimation"
                android:visibility="invisible"
                android:src="@drawable/lovebeating"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="8dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:id="@+id/totallikes"
                    android:layout_marginLeft="4dp"
                    android:layout_marginVertical="5dp"
                    android:textSize="17dp"

                    />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:id="@+id/likebtn"
                    android:src="@drawable/unlikebutton"/>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>


            <ImageView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/replybtn"
                android:src="@drawable/reply"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:id="@+id/delete"
                android:visibility="visible"
                android:src="@drawable/delete"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>




</androidx.cardview.widget.CardView>
